@model HotelService.Models.Room

@{
    ViewData["Title"] = "Create";
}

<div class="container bg-light px-5 border border-1">
  <h1>Dodaj pokój</h1>
  <hr />

  <form asp-action="Create" class="p-3 row" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-12">
      <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
    </div>
    <div class="col-12">
      <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="form-group">
        <label asp-for="People" class="control-label"></label>
        <input asp-for="People" class="form-control" />
        <span asp-validation-for="People" class="text-danger"></span>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="form-group">
        <label asp-for="CountOfRooms" class="control-label"></label>
        <input asp-for="CountOfRooms" class="form-control" min="1" max="30" value="1"/>
        <span asp-validation-for="CountOfRooms" class="text-danger"></span>
      </div>
    </div>
    <div class="col-12">
      <div class="form-group">
        <label asp-for="RoomPhoto" class="control-label"></label>
        <input asp-for="RoomPhoto" class="form-control" accept="image/*" />
        <span asp-validation-for="RoomPhoto" class="text-danger"></span>
        <span class="text-danger">
                    @Html.ValidationMessage("IncorrectExtensionError")
        </span>
      </div>
    </div>
    <div class="col-12 mt-2">
      <div class="form-group">
        <input type="submit" value="Dodaj pokój" class="btn btn-success" />
      </div>
    </div>
    <div class="col-12 mt-2">
        <div class="form-group">
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Hotels">Wróć do listy hoteli</a>
        </div>
  </div>
  </form>
</div>



@section Scripts {
        <script src="https://cdn.tiny.cloud/1/xhqgakhggodairtclysnakgbf7do0ikutty8r5hm18befk1a/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
        <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'advlist autolink lists link image charmap preview anchor pagebreak',
            toolbar_mode: 'floating',
        });
        </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
