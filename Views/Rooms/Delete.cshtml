@model HotelService.Models.Room

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuwanie pokoju</h1>

<h3>Jesteś pewien, że chcesz usunąć ten pokój?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.People)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.People)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Hotels">Wróć do listy hoteli</a>
    </form>
</div>
